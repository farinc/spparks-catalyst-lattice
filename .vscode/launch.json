{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/src/spparks",
            "cwd": ".",
            "args": ["-in", "${workspaceFolder}/examples/${input:example}", "-log", "${workspaceFolder}/run/out.log"],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python: oscillations.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/examples/oscillations/oscillations.py",
            "cwd": "${workspaceFolder}/python/examples/oscillations",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python",
                "LD_LIBRARY_PATH": "${workspaceFolder}/.pixi/envs/default/lib:${workspaceFolder}/${input:builddir}/src:${env:LD_LIBRARY_PATH}",
                "TERMINFO": "${workspaceFolder}/.pixi/envs/default/share/terminfo"
            }
        }
    ],
    "inputs": [
        {
            "id": "example",
            "type": "pickString",
            "options": ["chemistry/in.chemistry", "surface_rxn/in.oscillations"],
            "description": "Pick an spparks example",
            "default": "surface_rxn"
        },
        {
            "id": "builddir",
            "type": "promptString",
            "description": "Specify the (relative) build directory",
            "default": "builddir"
        }
    ]
}
